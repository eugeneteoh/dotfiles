{{ if eq .chezmoi.os "linux" -}}
#!/bin/sh

# Update package list and install essential tools
{{ if .runSudo }}
sudo apt update
{{ if .isServer -}}
sudo apt install -y zsh vim wget git ripgrep
{{- else -}}
sudo apt install -y zsh vim wget git build-essential make unzip gcc ripgrep tmux
{{- end }}
{{ end }}

# Change default shell to zsh
chsh -s "$(which zsh)"

{{ if not .isServer -}}
# Install Neovim
INSTALL_DIR="$HOME/nvim"
BIN_DIR="$HOME/bin"
SYMLINK="$BIN_DIR/nvim"
mkdir -p "$INSTALL_DIR" "$BIN_DIR"
curl -LO https://github.com/neovim/neovim/releases/latest/download/nvim-linux-x86_64.tar.gz
tar -xzf nvim-linux-x86_64.tar.gz -C "$INSTALL_DIR" --strip-components=1
rm nvim-linux-x86_64.tar.gz
ln -sf "$INSTALL_DIR/bin/nvim" "$SYMLINK"
{{- end }}

{{ else if eq .chezmoi.os "darwin" -}}
#!/bin/sh

# Enable key repeat
defaults write NSGlobalDomain ApplePressAndHoldEnabled -bool false

# Install Xcode command-line tools
xcode-select --install

# Install Homebrew if not installed
if ! command -v brew >/dev/null 2>&1; then
    NONINTERACTIVE=1 /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

{{ if .isServer -}}
# Install essential tools using Homebrew (server-minimal)
brew install coreutils wget vim git ripgrep
{{- else -}}
# Install essential tools using Homebrew (desktop-full)
brew install coreutils wget vim git neovim tmux ripgrep
{{- end }}

{{ end -}}
